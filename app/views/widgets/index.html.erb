<h1>Listing widgets</h1>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Created at</th>
    <% if user_signed_in? %>
    <th></th>
    <% end %>
  </tr>
</thead>

<tbody>
<% @widgets.each do |widget| %>
  <tr>
    <td><%= link_to widget.name, widget %></td>
    <td><%= widget.created_at %></td>
    <% if user_signed_in? %>
    <td><%= link_to 'Install', install_widget_path(widget), 
      :remote => true, :class => 'btn btn-primary btn-small', :method => 'get' %></td>
    <% end %>
  </tr>
<% end %>
</tbody>
</table>

<br />
<% if user_signed_in? %>
<%= link_to 'New Widget', new_widget_path %>
<% end %>
